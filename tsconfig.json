{
  "compilerOptions": {
    "target": "es2020",                
    "module": "commonjs",               
    "strict": true,                               
    "skipLibCheck": true,               
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                
    "rootDir": "./src",               
    "resolveJsonModule": true,          
    "esModuleInterop": true,            
    "isolatedModules": true             
  },
  "include": [
    "src/**/*.ts"                      
  ],
  "exclude": [
    "node_modules"                     
  ]
}
